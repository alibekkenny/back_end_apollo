// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "sqlite"
  url      = "file:../database/users.db"
}

generator client {
  provider = "prisma-client-js"
}

model User{
  id Int @id @default(autoincrement())
  first_name String
  avatar String
  posts  Post[]
}

model Post{
  id Int @id @default(autoincrement())
  title String
  content String
  author    User  @relation(fields: [authorId], references: [id])
  authorId  Int
}